<UserControl x:Class="Nisme.Controls.MenuBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="35" Width="Auto" BorderBrush="Black" BorderThickness="0.5">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#333333" Offset="0.0" />
                <GradientStop Color="#646464" Offset="1.0"  />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" /> <!-- 0 -->
            <ColumnDefinition Width="30" /> <!-- 1 -->
            <ColumnDefinition Width="100" /> <!-- 2 -->
            <ColumnDefinition Width="100" /> <!-- 3 -->
            <ColumnDefinition Width="100" /> <!-- 4 -->
            <ColumnDefinition Width="*" />  <!-- 5 -->
            <ColumnDefinition Width="125" /> <!-- 6 -->
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" BorderBrush="#333333" BorderThickness="0,0,1,0">
        </Border>
        <Border Grid.Column="1" BorderBrush="#333333" BorderThickness="0,0,1,0">
            <Grid>
                <Ellipse
      Height="20"
      Width="20"
      StrokeThickness="2"
      Stroke="#b9cccc">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#333333" Offset="0.0" />
                        <GradientStop Color="#646464" Offset="1.0"  />
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
                <Path Fill="#b9cccc" Data="M 14,11 l 1.5,0 l 0,6 l 4,4 l -1.5,1.5 l -4,-4 Z" />
            </Grid>
        </Border>
        <Border Grid.Column="2" BorderBrush="#333333" BorderThickness="0,0,1,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Foreground="#b9cccc" FontFamily="Verdana" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10">My Nisme</TextBlock>
            </StackPanel>
        </Border>
        <Border Grid.Column="3" BorderBrush="#333333" BorderThickness="0,0,1,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Foreground="#b9cccc" FontFamily="Verdana" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10">My Collection</TextBlock>
            </StackPanel>
        </Border>
        <Border Grid.Column="4" BorderBrush="#333333" BorderThickness="0,0,1,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Foreground="#b9cccc" FontFamily="Verdana" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10">Browse Music</TextBlock>
            </StackPanel>
        </Border>
        <TextBlock Grid.Column="5" Foreground="#b9cccc" FontFamily="Verdana" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="10" Margin="10,0,10,0">Wallet: $125.11</TextBlock>
        <Border Grid.Column="6" BorderBrush="#333333" BorderThickness="0,0,0,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#111111" Offset="0.0" />
                    <GradientStop Color="#515151" Offset="1.0"  />
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Foreground="#b9cccc" FontFamily="Verdana" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10">WedTM | Exit</TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
